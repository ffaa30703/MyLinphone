<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wits_background"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="100dip"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	       >
	        <ImageView 
	            android:id="@+id/dialog_save"
	            android:layout_width="90dip"
	            android:layout_height="90dip"
	            android:layout_weight="1"
	            android:src="@drawable/wits_save"/>
	         <ImageView 
	            android:id="@+id/dialog_cancel"
	            android:layout_width="90dip"
	            android:layout_height="90dip"
	            android:src="@drawable/wits_cancel"
	            android:layout_weight="1"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	         android:layout_width="380dip"
	         android:layout_height="fill_parent"
	         android:orientation="vertical"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginLeft="20dip"
	         >
		     <TextView
		         	android:id="@+id/input_view"
		            android:layout_width="280dip"
		            android:layout_height="60dip"
		            android:bufferType="editable"
		            android:textSize="25sp"
		            android:textStyle="bold"
		            android:textColor="#ffffff"
		            android:gravity="center"
		            android:background="@drawable/wits_passwordalarm"/>
		     <ImageView 
		         	android:layout_width="280dip"
		            android:layout_height="230dip"
		            android:src="@drawable/wits_keypad"/>
	        
	    </LinearLayout>
	    
    </LinearLayout>
    <fragment android:name="com.wits.intercom.TimeAndTemperatureFragment"
       	android:id="@+id/timefragment"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
	    android:paddingBottom="0dip"
     />

</RelativeLayout>