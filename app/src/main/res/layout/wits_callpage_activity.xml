<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/call_pag_middle_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/calling_status"
            android:layout_width="500dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            
            android:gravity="center"
            android:text="GUARD BUSY"
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/callde_roll_img"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/keeper" />

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:src="@drawable/wits_play_button" />

            <ImageView
                android:id="@+id/intercom_button"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                 />
"
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/call_pag_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="255dp"
        android:layout_toRightOf="@id/call_pag_middle_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/video"
            android:layout_width="74dp"
            android:layout_height="74dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO \n CALL"
            android:textColor="#000000"
            android:textSize="9pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="50dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:textColor="#000000"
            android:textSize="9pt"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>