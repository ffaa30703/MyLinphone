<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical" 
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/wits_background">
    
    <TableLayout 
        android:layout_width="match_parent"
		android:layout_height="wrap_content" 
	    android:gravity="center"
        >
        
       <TableRow  
            android:gravity="center" 
           >
           <ImageView    
           android:id="@+id/function_callDoorKeeper_button"
           android:layout_width="115dip"
		   android:layout_height="60dip"
		   android:src="@drawable/wits_call_door_keeper"
		    />
           
            <ImageView      
           android:id="@+id/function_callGuard_button"
           android:layout_width="115dip"
		   android:layout_height="60dip"
		   android:src="@drawable/wits_call_guard"
		   />
           
       </TableRow>
       
       <TableRow 
            android:gravity="center"
            android:layout_marginTop="5dip"
            >
            <ImageView   
             android:id="@+id/function_phoneBook_button" 
             android:layout_width="115dip"
		     android:layout_height="60dip"
		  	 android:src="@drawable/wits_phone_book"
		  	 />
           
             <ImageView
             android:id="@+id/function_openDoorPassword_button"      
             android:layout_width="115dip"
		     android:layout_height="60dip"
		  	 android:src="@drawable/wits_open_door_with_password"
		  	/>
       </TableRow>
       </TableLayout>
          
   	<include layout="@layout/wits_part_time_and_temperature"    
	  />
 

</RelativeLayout>