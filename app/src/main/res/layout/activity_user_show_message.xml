<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wits_background"
    android:orientation="vertical" >
	<TextView
		    android:id="@+id/user_input_message"
		    android:layout_width="380dip"
		    android:layout_height="160dip"
		    android:layout_centerInParent="true"
		    android:bufferType="editable"
		    android:textSize="25sp"
		    android:textStyle="bold"
		    android:textColor="#ffffff"
		    android:gravity="center"
		    android:background="@drawable/wits_conversation_time_bg"/>
	        
    <fragment android:name="com.wits.intercom.TimeAndTemperatureFragment"
       	android:id="@+id/timefragment"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
	    android:paddingBottom="0dip"
     />

</RelativeLayout>
