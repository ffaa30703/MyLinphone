<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wits_background"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="110dip"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	       >
	       
	         <ImageView 
	            android:id="@+id/dialog_cancel"
	            android:layout_width="match_parent"
	            android:layout_height="110dip"
	            android:layout_marginTop="180dip"
	            android:src="@drawable/wits_back"
	            />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	         android:layout_width="380dip"
	         android:layout_height="fill_parent"
	         android:layout_gravity="center"
	         android:layout_marginLeft="20dip"
	         android:orientation="vertical"
	         >
		     <TextView
		         	android:id="@+id/device_info"
		            android:layout_width="280dip"
		            android:layout_height="260dip"
		            android:textSize="22sp"
		            android:textStyle="bold"
		            android:textColor="#ffffff"
		            android:gravity="left"
		            android:paddingTop="15dip"
		            android:paddingLeft="10dip"
		            android:background="@drawable/wits_up_town_area_background"/>
	        
	    </LinearLayout>
	    
    </LinearLayout>
    <fragment android:name="com.wits.intercom.TimeAndTemperatureFragment"
       	android:id="@+id/timefragment"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
	    android:paddingBottom="0dip"
     />

</RelativeLayout>
