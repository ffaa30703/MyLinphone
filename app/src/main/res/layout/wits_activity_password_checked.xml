<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wits_background"
    android:id="@+id/password_checked_layout"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/checked_password_result"
        android:layout_width="400dip"
        android:layout_height="80dip"
        android:layout_marginTop="20dip"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:textSize="40dip"
        android:background="@drawable/wits_chenked_password_result_frame"
        android:text="@string/password_is_right"
        android:gravity="center"/>
    
    <LinearLayout android:layout_width="400dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <ImageView  android:id="@+id/lock_start"
            		android:layout_width="200dip"
            		android:layout_height="200dip"
            		android:src="@drawable/wits_lock_open"/>
        
         <ImageView  android:id="@+id/lock_start2"
            		android:layout_width="150dip"
            		android:layout_height="150dip"
            		android:layout_marginLeft="50dip"
            		android:layout_gravity="center"
            		android:src="@drawable/wits_password_right"/>
        
    </LinearLayout>
    

</LinearLayout>