<?xml version="1.0" encoding="utf-8"?>

     <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/conversion_time_layout"
         android:layout_width="250dip"
         android:layout_height="100dip"
         android:orientation="horizontal"
         android:background="@drawable/wits_conversation_time_bg" >
         
         <ImageView android:id="@+id/conversion_time_tag"
             		android:layout_width="100dip" 
             		android:layout_height="80dip"
             		android:layout_marginLeft="5dip"
             		android:layout_marginTop="5dip"
             		android:layout_gravity="center_vertical"
             		android:src="@drawable/wits_conversation_time_tag"/>
         
         <TextView android:id="@+id/conversion_time"
             	   android:layout_width="wrap_content"
             	   android:layout_height="wrap_content"
             	   android:layout_marginLeft="10dip"
             	   android:layout_gravity="center_vertical"
             	   android:textColor="#ffffff"
             	   android:textSize="20dip"
             	  />
     </LinearLayout>

