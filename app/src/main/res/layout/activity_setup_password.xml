<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wits_background"
    android:id="@+id/password_layout"
    >
    <LinearLayout
        		android:id="@+id/passowrd_printin_layout"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerVertical="true"
        		android:layout_centerHorizontal="true"
        		android:layout_marginTop="20dip"
        		android:orientation="horizontal">
    	<EditText android:id="@+id/password1"
    	    style="@style/password_edittet_style"
    	   />    
    	<EditText android:id="@+id/password2"
    	        style="@style/password_edittet_style"   	          	        
    	 />   
    	<EditText android:id="@+id/password3"
    	      style="@style/password_edittet_style"   	  
    	       />   
    	<EditText android:id="@+id/password4"
    	       style="@style/password_edittet_style"
    	      />   
    </LinearLayout>
    <EditText 
        	  android:id="@+id/password_type"
              android:layout_width="420dip"
              android:layout_centerHorizontal="true"
			  android:layout_height="60dip"
			  android:textColor="#ffffff"
			  android:gravity="center"
			  android:textStyle="bold"
			  android:focusable="false"
			  android:visibility="visible"
			  android:layout_gravity="center_horizontal"
			  android:textSize="30sp"
			  android:layout_above="@+id/passowrd_printin_layout"
			  android:background="@drawable/wits_passwordalarm"/>
    
     <fragment android:name="com.wits.intercom.TimeAndTemperatureFragment"
       	android:id="@+id/timefragment"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
	    android:paddingBottom="0dip"
     />

</RelativeLayout>
