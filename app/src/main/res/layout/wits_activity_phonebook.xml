<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wits_background"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="80dip"
        android:layout_height="fill_parent"
        android:orientation="vertical"
       >
        <ImageView android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_weight="1"
            android:src="@drawable/wits_line_up"/>
            <ImageView android:layout_width="70dip"
            android:layout_height="70dip"
            android:src="@drawable/wits_line_down"
            android:layout_weight="1"/>
        
    </LinearLayout>
    
    <LinearLayout 
        	android:layout_width="270dip"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dip"
         >
         <LinearLayout 
             android:layout_width="match_parent"
	         android:layout_height="230dip"
	         android:background="@drawable/wits_up_town_area_background"
             >
	        <ListView android:id="@+id/phone_book_listview"
	            android:listSelector="@drawable/list_item_bg"   
	            android:choiceMode="singleChoice"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="#0000">
	        </ListView>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal">
            
             <ImageView  android:layout_width="150dip"
                android:layout_height="60dip"
                android:src="@drawable/wits_to_call_img"/>
            
             <ImageView  android:layout_width="100dip"
                android:layout_height="60dip"
                android:src="@drawable/wits_arrow2"/>
                        
             <ImageView  android:layout_width="80dip"
                android:layout_height="60dip"
                android:src="@drawable/wits_call_img"/>
        </LinearLayout>
             
    </LinearLayout>
    
     <LinearLayout 
         android:layout_width="80dip"
         android:layout_height="fill_parent"
         android:orientation="vertical"
         android:layout_marginLeft="10dip"
         >
     <ImageView android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_weight="1"
            android:src="@drawable/wits_previous_page"/>
     <ImageView android:layout_width="70dip"
            android:layout_height="70dip"
            android:src="@drawable/wits_next_page"
            android:layout_weight="1"/>
        
    </LinearLayout>

</LinearLayout>