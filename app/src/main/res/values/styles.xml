<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoTitle" parent="android:Theme.NoTitleBar" />

    <style name="password_edittet_style">
        <item name="android:layout_width">80dip</item>
        <item name="android:layout_height">80dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:textSize">35sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:numeric">integer</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/wits_password_printin</item>
    </style>


</resources>
